<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_44"
    android:background="@color/black_deep"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/m_cancel"
        android:layout_width="@dimen/width_44"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_10"
        android:src="@drawable/cancel_bg_selector" />

    <ImageView
        android:id="@+id/m_delete"
        android:layout_width="@dimen/width_44"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/m_confirm"
        android:padding="@dimen/padding_10"
        android:src="@drawable/delete_bg_selector" />

    <ImageView
        android:id="@+id/m_confirm"
        android:layout_width="@dimen/width_44"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:padding="@dimen/padding_10"
        android:src="@drawable/confirm_bg_selector" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_1"
        android:layout_alignParentBottom="true"
        android:background="@color/black" />

</RelativeLayout>