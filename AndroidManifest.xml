<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="image.medical.idcm"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:name="image.medical.idcm.app.IDCMApplication"
        android:icon="@drawable/launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.IDCM" >
        <activity
            android:name="image.medical.idcm.home.SplashActivity"
            android:launchMode="standard"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="image.medical.idcm.home.HomeActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="image.medical.idcm.edit.IDCMEditActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="image.medical.idcm.edit.IDCMMoreActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="image.medical.idcm.storage.StorageFileActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="image.medical.idcm.storage.IDCMListActivity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>